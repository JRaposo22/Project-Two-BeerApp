<div style="text-align: center">

    <h1 class="listsh">{{loggedIn.title}} {{loggedIn.username}}'s {{wineType}} Tasted Wines</h1>

    <form action="/tasted-wines" method="post">
    <select name="wineType" id="sortBy" onchange="this.form.submit()">
        <option value="none" hidden selected>Wine Type</option>
        <option value="Red"> Red Wines</option>
        <option value="White">White Wines</option>
        <option value="Sparkling">Sparkling Wines</option>
        <option value="Rose">Rose Wines</option>
        <option value="Dessert">Dessert Wines</option>
        <option value="Port">Port Wines</option>
    </select>

    </form>

</div>

<div class="listsDivs">

    {{#each userTasted}}

    <div>

            <div id="eachwine">
                    <a href="/wine-details/{{_id}}">
                        <div id="littlewine">
                        <img id="bottle" src="{{image}}" alt="{{wine}}">
                            <h1 style="color: darkred">{{wine}}</h1>
                            <p>From: {{location}}</p>
                            <p>Winery: {{winery}}</p>
                            <p>Rating: {{rating.average}}</p>
                        </div>
                    </a>
                </div>

                <div class="buttonsdiv">

                    <form action="/wine-details/{{_id}}/add-favourite" method="post">
                        <button style="background-color: darkred" class="listsbuttons" type="submit">Add to Favourites</button>
                    </form>
                    <form action="/tasted-wines/{{_id}}/delete-tasted-wine" method="post">
                        <button style="background-color: darkred" class="listsbuttons" type="submit">Remove from tasted wines</button>
                    </form>

                </div>

        </div>

    {{/each}}

</div>