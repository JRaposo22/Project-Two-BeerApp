
<h1>Our {{wineType}} wine list</h1>


<form action="/wines-list" method="post">
<select name="wineType" id="sortBy" onchange="this.form.submit()">
    <option value="none" hidden selected></option>
    <option value="Red"> Red Wines</option>
    <option value="White">White Wines</option>
    <option value="Sparkling">Sparkling Wines</option>
    <option value="Rose">Rose Wines</option>
    <option value="Dessert">Dessert Wines</option>
    <option value="Port">Port Wines</option>
</select>

</form>


{{#each wine}}

    <a href="/wine-details/{{_id}}">
        <img src="{{image}}" alt="{{wine}}">
        <h2>{{wine}}</h2>
        <p>{{winery}}</p>
        <p>{{location}}</p>
        <p>{{rating.average}}</p>
    </a>
    
{{/each}}