<div style="text-align: center">

    <h1 class="listsh">{{loggedIn.title}} {{loggedIn.username}}'s  Favourite {{wineType}} Wines</h1>

    <form action="/favourites" method="post">
    <select name="wineType" id="sortBy" onchange="this.form.submit()">
        <option value="none" hidden selected>Wine Type</option>
        <option value="Red"> Red Wines</option>
        <option value="White">White Wines</option>
        <option value="Sparkling">Sparkling Wines</option>
        <option value="Rose">Rose Wines</option>
        <option value="Dessert">Dessert Wines</option>
        <option value="Port">Port Wines</option>
    </select>

    </form>

</div>


<div class="listsDivs">

    {{#each userFavourites}}
      
        <div class = "wines-margin">

            <div id="eachwine">
                    <a href="/wine-details/{{_id}}">
                        <div id="littlewine">
                        <img id="bottle" src="{{image}}" alt="{{wine}}">
                            <h1 style="color: darkred">{{wine}}</h1>
                            <p>From: {{location}}</p>
                            <p>Winery: {{winery}}</p>
                            <p>Rating: {{rating.average}}</p>
                        </div>
                    </a>
                </div>

                <div class="buttonsdiv">
                
                    <form action="/favourites/{{_id}}/delete-favourite" method="post">
                        <button style="background-color: darkred" class="listsbuttons" type="submit">Remove from favourites</button>
                    </form>
                    <form action="/favourites/{{_id}}/delete-favourite-tasted" method="post">
                        <button style="background-color: darkred" class="listsbuttons" type="submit">Remove from favourites and tasted wines</button>
                    </form>

                </div>

        </div>

        {{/each}}

</div>