<h1>Mr/Ms. {{loggedIn.username}}'s  Favourite {{wineType}} Wines</h1>
<form action="/favourites" method="post">
<select name="wineType" id="sortBy" onchange="this.form.submit()">
    <option value="none" hidden selected></option>
    <option value="Red"> Red Wines</option>
    <option value="White">White Wines</option>
    <option value="Sparkling">Sparkling Wines</option>
    <option value="Rose">Rose Wines</option>
    <option value="Dessert">Dessert Wines</option>
    <option value="Port">Port Wines</option>
</select>

</form>

{{#each userFavourites}}

    <a href="/wine-details/{{_id}}">
        <img src="{{image}}" alt="{{wine}}">
    </a>
        <h2>{{wine}}</h2>
        <p>{{winery}}</p>
        <p>{{location}}</p>
        <p>{{rating.average}}</p>
        <form action="/favourites/{{_id}}/delete-favourite" method="post">
            <button type="submit">Remove from favourites</button>
        </form>
        <form action="/favourites/{{_id}}/delete-favourite-tasted" method="post">
            <button type="submit">Remove from favourites and tasted wines</button>
        </form>
    
    
{{/each}}