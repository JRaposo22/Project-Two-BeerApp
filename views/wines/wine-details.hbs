<h2>{{wine.wine}}</h2>
<img src="{{wine.image}}" alt="{{wine.wine}}">
<p>{{wine.winery}}</p>
<p>{{wine.location}}</p>
<p>{{wine.rating.average}}</p>

{{#if loggedIn}}
<form action="/wine-details/{{wine._id}}/add-favourite" method="post">
    <button type="submit">Add to Favourites</button>
</form>
<form action="/wine-details/{{wine._id}}/add-tasted-wines" method="post">
    <button type="submit">Add to Tasted</button>
</form>
<form action="/wine-details/{{wine._id}}/add-wish-list" method="post">
    <button type="submit">Add to Wish List</button>
</form>
{{/if}}

