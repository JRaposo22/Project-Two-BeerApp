<h1>Mr/Ms. {{loggedIn.username}}'s {{wineType}} Wish List</h1>

<form action="/wish-list" method="post">
<select name="wineType" id="sortBy" onchange="this.form.submit()">
    <option value="none" hidden selected></option>
    <option value="Red"> Red Wines</option>
    <option value="White">White Wines</option>
    <option value="Sparkling">Sparkling Wines</option>
    <option value="Rose">Rose Wines</option>
    <option value="Dessert">Dessert Wines</option>
    <option value="Port">Port Wines</option>
</select>

</form>
{{#each userWishList}}

    <a href="/wine-details/{{_id}}">
        <img src="{{image}}" alt="{{wine}}">
        </a>
        <h2>{{wine}}</h2>
        <p>{{winery}}</p>
        <p>{{location}}</p>
        <p>{{rating.average}}</p>
    
        <form action="/wine-details/{{_id}}/add-favourite" method="post">
             <button type="submit">Add to Favourites</button>
        </form>
        <form action="/wine-details/{{_id}}/add-tasted-wines" method="post">
             <button type="submit">Add to Tasted</button>
        </form>
        <form action="/wish-list/{{_id}}/delete-wish-list" method="post">
             <button type="submit">Remove from Wish List</button>
        </form>
    
{{/each}}