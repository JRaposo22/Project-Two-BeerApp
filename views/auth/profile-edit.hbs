<div id="profilesection">

    <h1 id="profileh">Edit {{user.title}} {{user.username}}'s profile:</h1>

    <div id="profileedit">

        <form action="" method="post">

            <div>
                <label for="title">Title: </label>
                <input type="text" name="title" id="title" value="{{user.title}}">
            </div>

            <div>
                <label for="username">Username: </label>
                <input type="text" name="username" id="username" value="{{user.username}}">
            </div>
            
            <img id="profileimg" src="{{loggedIn.imageUrl}}" alt="{{user.username}} profile picture">
    



        <form action="" method="post" enctype="">
            <div class='form-group'>
                <label>Image:
                    <input type='file' name='poster' class='form-control-file' />
                </label>
            </div>

        <input type='text' value='{{imageUrl}}' name='currentImage' hidden />
        <button type='submit' class='btn btn-primary'>Submit</button>


        </form>


            <button id="editprofilebutton" type="submit">Save changes</button>
            
        </form>

    </div>

</div>
